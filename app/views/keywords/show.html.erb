<div class="row">
<aside class="col_1">
  <%= render "google_ad_article_show_square" %>
</aside>
<article class="col_2" itempscope itemtype="http://schema.org/Article">
  <header><h3><%= @keyword.name %></h3></header>
  <div itemprop="description">
    <%=raw TextDecorator.replace(@keyword.body) %>
  </div>

  <aside>
    <p style="margin:10px;backgroud-color:#EEE">
    <%= link_to h("#{@name} - wikipedia"), "http://ja.wikipedia.org/wiki/#{u(@name)}", :target => "_blank" %><br />
    <%= link_to h("#{@name} - はてなキーワード"), "http://d.hatena.ne.jp/keyword/#{u(@name)}", :target => "_blank" %><br />
  </aside>
</article>


<aside class="col_3 keyword_articles">
  <h4>「<%= @keyword.name %>」を含む最近の記事</h4>
  <%= will_paginate @articles, :class => "paginate", :previous_label => "< 前", :next_label => "次 >" %>
  <ul>
    <% @articles.each do |a| %>
      <li><%= link_to a.title, article_path(a) %> (<%= a.publish_at.to_s(:local) %>)</li>
    <% end %>
  </ul>
  <%= will_paginate @articles, :class => "paginate", :previous_label => "< 前", :next_label => "次 >" %>
</aside>
</div>                                  
